generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String
  passwordHash String @map("password_hash")

//displaySettings
  @@map("users")
  
}

model Graph{
  id Int @default(autoincrement()) @id
  isDirected Boolean @map("is_directed")
  //created_by
  @@map("graphs")
}

model  Node{
  
  id Int @default(autoincrement()) @id
  //graph id
  //value
  displayValue String? @map("dispaly_value")
  x Int
  y Int
  @@map("nodes")
}

model Edge{

  id Int @default(autoincrement()) @id
  weight Float
  isDirected Boolean @map("is_directed")
  @@map("edges")
}